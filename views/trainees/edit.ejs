<%- include("../partials/header")%>
<h1>Edit Trainee</h1>

<p><%=message%></p>

<form method="post" action="/trainees">
  <fieldset>
    <legend>Trainee Particulars</legend>
    <label
      >Name:<input name="name" value="<%=trainee.name%>" required />*</label
    >
    <br />
    <label
      >Date of Birth:<input
        name="dOB"
        value="<%=trainee.dOB%>"
        type="date"
        required
    /></label>
    <br />
    <label
      >Contact:
      <input name="contact" value="<%=trainee.contact%>" required />*</label
    ><br />
    <label
      >Vehicle Number: <input name="vehNum" value="<%=trainee.vehNum%>"
    /></label>
  </fieldset>
  <% requirementNames.forEach((requirementName, index) => { %>
  <fieldset>
    <legend><%=requirementName%></legend>
    <label
      >Last Attended: <input name="<%=requirementName%>" type="date"
      value="<%=dayjs(trainee.currencies[index].lastAttended).format("YYYY-MM-DD")%>"
      />*</label
    >
  </fieldset>
  <%}) %>
  <button>Update</button>
</form>
