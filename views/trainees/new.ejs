<%- include("../partials/header")%>
<h1>Add New Trainee</h1>
<p><%=message%></p>
<form method="post" action="/trainees">
  <fieldset>
    <legend>Trainee Particulars</legend>
    <label>Name:<input name="name" required />*</label> <br />
    <label>Date of Birth:<input name="dOB" type="date" required /> </label
    ><br />
    <label>Contact: <input name="contact" required />*</label><br />
    <label>Vehicle Number: <input name="vehNum" /></label>
  </fieldset>
  <% requirementNames.forEach((requirementName) => { %>
  <fieldset>
    <legend><%=requirementName%></legend>
    <label
      >Last Attended: <input name="<%=requirementName%>" type="date" />*</label
    >
  </fieldset>
  <%}) %>
  <button>Add</button>
</form>
