<%- include("../partials/header")%>
<div>
  <h1><%= training.type %></h1>
  <h4>Start: <%= dayjs(training.start).format("D-MMM-YY, HH:mm")%></h4>
  <h4>End: <%= dayjs(training.end).format("D-MMM-YY, HH:mm")%></h4>
  <h4>
    Vacancies: <%=training.capacity -
    training.trainees.length%>/<%=training.capacity%>
  </h4>
</div>
<a href="/trainings/<%= training._id %>/edit">Edit</a>
<form action="/trainings/<%= training._id %>?_method=DELETE" method="post">
  <button>Delete</button>
</form>

<div>
  <h4>Trainees</h4>
  <table>
    <thead>
      <th>Name</th>
      <th>Contact</th>
      <th>Vehicle Number</th>
      <th>Last Attended</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <%training.trainees.forEach((trainee) => {%>
      <tr>
        <td><%=trainee.name%></td>
        <td><%=trainee.contact%></td>
        <td><%=trainee.vehNum%></td>
        <td><%=dayjs(trainee.lastAttended, "D-MMM-YY")%></td>
        <td><a href="somelink">Verify Completion</a></td>
      </tr>
      <%})%>
    </tbody>
  </table>
</div>

<%- include("../partials/footer")%>
